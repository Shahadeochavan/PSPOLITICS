<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">
    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/nitin"
            android:id="@+id/person_photo_party"
            android:layout_marginRight="16dp"
            />
        <ImageView
            android:id="@+id/party_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/nitin"
            android:layout_toRightOf="@+id/person_photo_party"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_person_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/person_photo_party"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:textColor="@color/dark_grreen"
            android:textStyle="italic"
            android:layout_below="@+id/party_person_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/party_desgination"
            android:layout_below="@+id/party_name"
            android:layout_marginTop="05dp"
            android:textColor="@color/red"
            android:text="CM"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/about_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/social"
            android:layout_marginTop="05dp"
            android:layout_below="@+id/party_desgination"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>

