<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fent_red"
    android:padding="16dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:background="@color/fent_red_dark"
        >

        <RelativeLayout
            android:background="@color/fent_red_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voting_day"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voting_date"
                android:textColor="@color/counter_text_color"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/voting_day"
                android:textSize="15sp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voting_start"
                android:textColor="@color/dark_grreen"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/voting_date"
                android:textSize="15sp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/voting_end"
                android:textColor="@color/dark_grreen"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/voting_start"
                android:textSize="15sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
